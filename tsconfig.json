{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["vite/client", "node"],
        "allowJs": true,
        "skipLibCheck": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@config/*": ["config/*"],
            "@store/*": ["src/store/*"],
            "@servers/*": ["src/servers/*"],
            "@hooks/*": ["src/hooks/*"],
            "@components/*": ["src/components/*"],
            "@style/*": ["src/style/*"],
            "@assets/*": ["src/assets/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "exclude": ["node_modules", "build", "dist", "**/*.js", "mock"]
}
